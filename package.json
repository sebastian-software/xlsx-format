{
	"name": "xlsx-format",
	"version": "1.0.0",
	"description": "Modern XLSX reader/writer â€” TypeScript rewrite of SheetJS (XLSX only)",
	"keywords": [
		"excel",
		"xlsx",
		"xlsm",
		"spreadsheet",
		"office"
	],
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"sideEffects": false,
	"scripts": {
		"build": "tsup",
		"check": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint src/ tests/",
		"lint:fix": "eslint --fix src/ tests/",
		"format": "prettier --write src/ tests/",
		"format:check": "prettier --check src/ tests/",
		"prepare": "husky"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/node": "^25.2.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"tsup": "^8.3.0",
		"typescript": "^5.6.0",
		"typescript-eslint": "^8.55.0",
		"vitest": "^2.1.0"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "pnpm@10.7.1",
	"lint-staged": {
		"*.{ts,js}": "prettier --write",
		"*.{json,md,yml,yaml}": "prettier --write"
	},
	"license": "Apache-2.0",
	"homepage": "https://github.com/nickelow/xlsx-format"
}
